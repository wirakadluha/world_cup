<div class='row-fluid'>
	<div class='span-8'>
		<div class= "white">

		<% if @coach.errors.present? %>
			<ul>
				<% @coach.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<%end%>
			</ul>
		<% end %>
		<%= form_for @coach do |f| %>
			<table>
				<tr>
					<td>Name</td>
					<td>:</td>
					<td><%= f.text_field :name%></td>
				</tr>
				<tr>
					<td>age</td>
					<td>:</td>
					<td><%= f.text_field :age%></td>
				</tr>
				<tr>
					<td>national</td>
					<td>:</td>
					<td><%= f.text_field :national%></td>
				</tr>
				
					<tr>
						<td>Team</td>
						<td>:</td>
						<td><%= f.collection_select :team_id, Team.all, :id, :name %></td>
					</tr>
				
					<tr>
						<td>image</td>
						<td>:</td>
						<td><%= f.file_field :image %></td>
					</tr>
					<tr>
						<td>image_team</td>
						<td>:</td>
						<td><%= f.file_field :image_team %></td>
					</tr>

				<tr>
					<td colspan = '3'><%= f.submit %>
				</tr>
			</table>
		<% end %>
	    </div>
	</div>
</div>
