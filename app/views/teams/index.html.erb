<div class='row-fluid'>
	<div class='span-8'>
		<p class="lead">
			<h1> List All Team </h6>
			</p>
		<ul>
			<%@teams.each do |team| %>
			<li><%= link_to team.name, team_path(team) %> | <%=team.name_kode %>
				<br>
					<%= link_to 'Edit', edit_team_path(team), class:'btn btn-primary'%>
			   	    <%= link_to 'Destroy', team_path(team), method: :delete, class: 'btn btn-danger'%>
			</li>
			<%end%>
		</ul>
		<%= link_to'New_team', new_team_path, class: 'btn btn-success' %> 
	</div>
</div>
